{
  "appId": "Dox",
  "asar": false,
  "directories": {
    "output": "release/${version}"
  },
  "files": ["dist"],
  "mac": {
    "artifactName": "${productName}_${version}.${ext}",
    "icon": "dist/Logo.icns",
    "target": ["dmg"]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}_${version}.${ext}"
  },
  "linux": {
    "target": ["AppImage"]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  }
}
